		escreva(
"Calculando a venda dos Do primeiro Bimestre deste Ano")
		escreva("Qual o Nome do Funcionário")
		leia(Funcionario)
		escreva("Insira a venda de Janeiro")
		leia(v1)
		escreva("Insira a Venda de Fevereiro")
		leia(v2)
		escreva("Insira a Venda de Março")
		leia(v3)
